-- OMG HUB Loading Screen with Circle Loader + White Fade
-- Put this in StarterGui as a LocalScript

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = player:WaitForChild("PlayerGui")
ScreenGui.IgnoreGuiInset = true
ScreenGui.ResetOnSpawn = false

-- Background
local BG = Instance.new("Frame")
BG.Size = UDim2.new(1,0,1,0)
BG.BackgroundColor3 = Color3.fromRGB(0,0,0)
BG.Parent = ScreenGui

-- Title
local Title = Instance.new("TextLabel")
Title.AnchorPoint = Vector2.new(0.5, 0)
Title.Position = UDim2.new(0.5, 0, 0.15, 0)
Title.Size = UDim2.new(0, 300, 0, 50)
Title.BackgroundTransparency = 1
Title.Text = "OMG HUB\nLoading: 0%"
Title.Font = Enum.Font.GothamBold
Title.TextScaled = true
Title.TextColor3 = Color3.fromRGB(255,255,255)
Title.Parent = BG

-- Pancake Icon
local Icon = Instance.new("ImageLabel")
Icon.Size = UDim2.new(0, 64, 0, 64)
Icon.Position = UDim2.new(0.1, 0, 0.5, -32)
Icon.BackgroundTransparency = 1
Icon.Image = "rbxassetid://11733196258" -- Pancake face
Icon.Parent = BG

-- Progress Bar Background
local BarBG = Instance.new("Frame")
BarBG.Size = UDim2.new(0.7, 0, 0.05, 0)
BarBG.Position = UDim2.new(0.15, 0, 0.5, 0)
BarBG.BackgroundColor3 = Color3.fromRGB(40,40,40)
BarBG.BorderSizePixel = 0
BarBG.Parent = BG

-- Progress Bar Fill
local BarFill = Instance.new("Frame")
BarFill.Size = UDim2.new(0,0,1,0)
BarFill.BackgroundColor3 = Color3.fromRGB(255,0,128) -- Pink
BarFill.BorderSizePixel = 0
BarFill.Parent = BarBG

-- Loading Text
local LoadingText = Instance.new("TextLabel")
LoadingText.AnchorPoint = Vector2.new(0.5, 0)
LoadingText.Position = UDim2.new(0.5, 0, 0.58, 0)
LoadingText.Size = UDim2.new(0, 400, 0, 50)
LoadingText.BackgroundTransparency = 1
LoadingText.Text = "OMG HUB BYPASSING"
LoadingText.Font = Enum.Font.GothamBold
LoadingText.TextScaled = true
LoadingText.TextColor3 = Color3.fromRGB(255,255,255)
LoadingText.Parent = BG

-- Fake loading (1 minute total)
for i = 1, 100 do
    Title.Text = "OMG HUB\nLoading: "..i.."%"
    BarFill.Size = UDim2.new(i/100, 0, 1, 0)
    wait(0.6) -- ~60 seconds total
end

-- Remove progress bar and show circle loader
BarBG:Destroy()
BarFill:Destroy()
LoadingText.Text = "Finalizing..."

-- Circle Loader
local Circle = Instance.new("ImageLabel")
Circle.AnchorPoint = Vector2.new(0.5, 0.5)
Circle.Position = UDim2.new(0.5, 0, 0.6, 0)
Circle.Size = UDim2.new(0, 64, 0, 64)
Circle.BackgroundTransparency = 1
Circle.Image = "rbxassetid://11895630883" -- Simple circle spinner asset
Circle.Parent = BG

-- Spin animation
spawn(function()
    while Circle.Parent do
        Circle.Rotation = Circle.Rotation + 5
        wait(0.01)
    end
end)

wait(30) -- Show spinner for 30 seconds

-- White fade overlay
local FadeWhite = Instance.new("Frame")
FadeWhite.Size = UDim2.new(1,0,1,0)
FadeWhite.BackgroundColor3 = Color3.fromRGB(255,255,255)
FadeWhite.BackgroundTransparency = 1
FadeWhite.ZIndex = 10
FadeWhite.Parent = ScreenGui

local fadeTween = TweenService:Create(FadeWhite, TweenInfo.new(2), {BackgroundTransparency = 0})
fadeTween:Play()
fadeTween.Completed:Wait()

wait(0.5) -- Short pause on white screen
ScreenGui:Destroy()
